root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 2

[*.java]
insert_final_newline = true

[{*.har,*.json,*.jsonc,*.postman_collection,*.postman_collection.json,*.postman_environment,*.postman_environment.json,*.sonarlint/*.json,.prettierrc,.stylelintrc,connectedMode.json}]
trim_trailing_whitespace = true

[{*.yaml,*.yml}]
insert_final_newline = true
